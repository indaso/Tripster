extends layout
block content
	a(href="/") Home			
	a(href='/myprofile') MyProfile	
	a(href="/addfriends") Add Friends
	br
	a(href="/friendstrips") My friends trips
	br
	a(href="/tripinvites") Trip Invites
	br			
	a(href="/logout") Logout


	h1 Respond to Friends Requests To Join Your Trips

	p #{message}
	ul 
		each r, index in requests
			li=  r 
			p= trips[index]
			form(method='post')
				p To accept his/her friend request:
				input(type='hidden', name='requester', value=r)
				input(type='hidden', name='trip', value=trips[index])
				input(type='hidden', name='response', value='accept')
				input(type='submit', value='Accept')
			form(method='post')
				p To accept his/her friend request:
				input(type='hidden', name='requester', value=r)
				input(type='hidden', name='trip', value=trips[index])
				input(type='hidden', name='response', value='reject')
				input(type='submit', value='Reject')
