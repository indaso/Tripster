extends layout
block content
	a(href="/") Home			
	a(href='/myprofile') MyProfile	
	a(href="/addfriends") Add Friends
	a(href="/logout") Logout


	h1 My Friend Requests
 
	p #{message}
	ul 
		each r in requests
			li=  r 
			form(method='post')
				p To accept his/her friend request:
				input(type='hidden', name='requester', value=r)
				input(type='hidden', name='response', value='accept')
				input(type='submit', value='Accept')
			form(method='post')
				p To accept his/her friend request:
				input(type='hidden', name='requester', value=r)
				input(type='hidden', name='response', value='reject')
				input(type='submit', value='Reject')





