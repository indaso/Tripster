extends layout
block content
	a(href="/") Home
	br			
	a(href="/addfriends") Add Friends
	br
	a(href="/editprofile") Edit My Profile 
	br
	a(href="/friendrequests") Pending Friend Requests
	br
	a(href="/createtrip") Create a new trip!
	br
	a(href="/tripinvites") Trip Invites
	br
	a(href="/friendstrips") My friends trips
	br		
	a(href="/search") Search
	br
	a(href="/logout") Logout


	h1 My Friend Requests
 
	p #{message}
	ul 
		each r in requests
			li=  r 
			form(method='post')
				p To accept his/her friend request:
				input(type='hidden', name='requester', value=r)
				input(type='hidden', name='response', value='accept')
				input(type='submit', value='Accept')
			form(method='post')
				p To accept his/her friend request:
				input(type='hidden', name='requester', value=r)
				input(type='hidden', name='response', value='reject')
				input(type='submit', value='Reject')





